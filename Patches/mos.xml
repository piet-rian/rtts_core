<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--
    * `//ThoughtDef/nullifyingTraits` に 特性を追加することで、指定された考え方(による心情変化)を無効化するパッチ
    * 星の人(星堂)の仕事を全うするにあたって、障害となる(心情マイナスが重なる)項目だけを無効化する
    * 要するに死体関連
  -->

  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThoughtDef[defName="ObservedLayingCorpse"]/nullifyingTraits</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>/Defs/ThoughtDef[defName="ObservedLayingCorpse"]</xpath>
      <value>
        <nullifyingTraits>
          <li>RTTS_planetarian</li>
        </nullifyingTraits>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThoughtDef[defName="ObservedLayingCorpse"]/nullifyingTraits</xpath>
      <value>
        <li>RTTS_planetarian</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThoughtDef[defName="ObservedLayingRottingCorpse"]/nullifyingTraits</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>/Defs/ThoughtDef[defName="ObservedLayingRottingCorpse"]</xpath>
      <value>
        <nullifyingTraits>
          <li>RTTS_planetarian</li>
        </nullifyingTraits>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThoughtDef[defName="ObservedLayingRottingCorpse"]/nullifyingTraits</xpath>
      <value>
        <li>RTTS_planetarian</li>
      </value>
    </match>
  </Operation>

</Patch>
