<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <!--
    * 特性: 星の人(planetarian)
    *
    * 大まかな方向性
    * - 精神感応が大幅に上昇する
    * - 生物的な欲求を取り除く(食事, 睡眠, 恋愛など)(DBHの衛生特性もパッチで取り除く)
    * - 自然な気分の上昇を得る(Defs\ThoughtDef\mos_thought.xml で定義)
    * - 特定のThoughtを無効化する(Patchで行う必要あり)
  -->

  <TraitDef>
    <defName>RTTS_planetarian</defName>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>planetarian</label>
        <description> {PAWN_nameDef} is called a "Planetarian" - a non-human entity.\n{PAWN_pronoun} tries hard to act as human-like as possible, yet still remains distinctly inhuman in some ways. </description>
        <statFactors>
          <!-- 精神感応大幅UP -->
          <PsychicSensitivity>1.0</PsychicSensitivity>
          <!-- 思想が変わらない(フレーバー的に人とは別軸の存在であるため) -->
          <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0</CertaintyLossFactor>
          <!-- おまけ -->
          <MentalBreakThreshold>-0.30</MentalBreakThreshold>
        </statFactors>
        <!-- skillGains でステータス補正もつけられるが、バックストーリー側でつけたい -->
        <disablesNeeds>
          <!-- 生物的な欲求を取り除く -->
          <li>Food</li>
          <li>Rest</li>
        </disablesNeeds>

        <disallowedThoughts>
          <li MayRequire="ludeon.rimworld.anomaly">ImprisonedWithEntity</li>
          <li MayRequire="ludeon.rimworld.anomaly">EntityInRoom</li>
        </disallowedThoughts>
      </li>
    </degreeDatas>

    <!-- `conflictingTraits` で特性同士の排他指定が出来るが、自然発生させるつもりがないので省略 -->
    <!-- `exclusionTags` で同一タググループ単位で特性の排他制御ができるが、同上 -->
    <!-- `conflictingPassions` で熱意についても排他指定が出来るが同上 -->
  </TraitDef>

  <!--
    * 特定のThoughtの無効化処理はパッチで行う必要がある
  -->

</Defs>
